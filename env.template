# Environment Variables for DeliverXY
# Copy this file to .env and update values for your environment
# WARNING: Never commit .env files to git - they contain sensitive credentials

# Database Configuration (used by docker-compose.yml)
POSTGRES_DB=deliverxy
POSTGRES_USER=deliverxy
POSTGRES_PASSWORD=deliverxy

# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=prod
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/deliverxy
SPRING_DATASOURCE_USERNAME=deliverxy
SPRING_DATASOURCE_PASSWORD=deliverxy

# JWT Secret (generate a strong random string for production)
JWT_SECRET=your-256-bit-secret-key-change-this-in-production

# Stripe Payment Configuration (get from https://stripe.com/dashboard)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Firebase Push Notifications (optional - leave empty to disable push notifications)
# Download service account JSON from Firebase Console > Project Settings > Service Accounts
# Place the JSON file in a secure location and set the path here
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=/path/to/firebase-service-account.json

# Frontend Admin API URL (injected at Docker build time)
# Browser needs public IP to call backend API
# For AWS: http://13.60.229.249:8080
# For local: http://localhost:8080
VITE_API_URL=http://13.60.229.249:8080

# Mobile App API URL (injected at NativeScript build time via webpack)
# Device needs public IP to call backend API
# For AWS: http://13.60.229.249:8080
# For local: http://YOUR_PC_IP:8080 or http://10.0.2.2:8080 (Android emulator)
API_URL=http://13.60.229.249:8080
